{
  "expo": {
    "name": "LocalBites",
    "slug": "food-discover",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FF6B35"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fooddiscover.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to find nearby restaurants and food",
        "NSCameraUsageDescription": "We need camera access to upload food photos",
        "NSPhotoLibraryUsageDescription": "We need photo library access to upload food photos"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FF6B35"
      },
      "package": "com.fooddiscover.app",
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ],
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Food Discover to use your location to find nearby restaurants and food."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app needs access to your photos to upload food images.",
          "cameraPermission": "The app needs access to your camera to take photos of food."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "04d3d295-6a42-4231-9d71-68ee9818983e"
      }
    },
    "owner": "time.da"
  }
}
